
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/Styles.cshtml";
}
<nav class="navbar navbar-dark bg-dark">
    <span class="navbar-brand col-md-offset-0 h1">Evening Shop</span>
</nav>
<div>
    <div class="row">
        <div class="col-sm-3">
            <div class="container">
                <div class="list-group-item list-group-item-action active">Item</div>
                <div class="panel-body bg-dark" style="color:white">
                    <form id="form-project">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="pos" id="pos" value="Roll" checked />
                                <label>Roll</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="pos" id="pos" value="Bread" checked />
                                <label>Bread</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="pos" id="pos" value="Cake" checked />
                                <label>Cake</label>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

        </div>

        <div class="col-sm-3">
            <div class="container">
                <div class="list-group-item list-group-item-action active">Ingredients</div>
                <div class="panel-body bg-dark" style="color:white">
                    <form id="form-project">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ind" id="ind" value="Veg" checked />
                                <label>Veg</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ind" id="ind" value="Chicken" checked />
                                <label>Chicken</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ind" id="ind" value="Fish" checked />
                                <label>Fish</label>
                            </div>

                        </div>
                    </form>
                </div>
                <div>
                    <label>Qty</label>
                    <input type="number" id="qty" name="qty" placeholder="Qty" class="form-control" required />
                </div>
                <br />
                <div>
                    <input type="button" class="btn btn-info" value="Add" />

                    <input type="button" class="btn btn-info" value="Reset" id="reset" />
                </div>
                <div>
                    <label>Total</label>
                    <input type="text" style="color  : White; background:black" id="total" name="Total" placeholder="Total" class="form-control" required />
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="list-group-item list-group-item-action active">Add Products</div>
            <table id="tbl-item" class="table table-bordered" cellpadding="0" width="100" align="center">
                <thead>
                    <tr>
                        <th>Delete</th>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Total</th>
                    </tr>
                <tbody>
                </tbody>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

    <script>
        var total = 0;
        var tot = 0;
        $(document).ready(function () {
            {
                $("input[type='button']").click(function () {
                    var radio1 = $("input[name='pos']:checked").val();
                    var radio2 = $("input[name='ind']:checked").val();

                    var price = null;

                    if (radio1 == "Roll") {
                        if (radio2 == "Veg") {
                            price = 10;
                        }
                        else if (radio2 == "Chicken") {
                            price = 15;
                        }
                        else if (radio2 == "Fish") {
                            price = 18;
                        }
                    }

                    else if (radio1 == "Bread") {
                        if (radio2 == "Veg") {
                            price = 15;
                        }
                        else if (radio2 == "Chicken") {
                            price = 18;
                        }
                        else if (radio2 == "Fish") {
                            price = 21;
                        }
                    }

                    if (radio1 == "Cake") {
                        if (radio2 == "Veg") {
                            price = 18;
                        }
                        else if (radio2 == "Chicken") {
                            price = 21;
                        }
                        else if (radio2 == "Fish") {
                            price = 24;
                        }
                    }

                    var qty = $("#qty").val();
                    tot = qty * price;

                    var table =
                        "<tr>" +
                        "<tr><button type='button' name='record' class='btn btn-info' onclick='deleterow(this)'>Delete</td>" +
                        "<td>" + radio1 + "  " + radio2 + "<td>" +
                        "<td>" + price + "<td>" +
                        "<td>" + qty + "<td>" +
                        "<td>" + tot + "<td>" +
                        "<td>";

                    total += Number(tot);
                    $('#total').val(total);
                    $("table tbody").append(table);
                }
            };
        }

        );
    </script>

}

